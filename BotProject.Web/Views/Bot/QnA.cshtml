        var lstCard = @Html.Raw(Json.Encode(cards));
        function card() {
            var html = '<optgroup label="DANH SÁCH THẺ">';
            if (lstCard.length != 0) {
                $.each(lstCard, function (index, value) {
                    html += '<option value="'+value.ID+'">'+value.Name+'</option>';
                })
            }
            html += '</optgroup>';
            return html;

        }
