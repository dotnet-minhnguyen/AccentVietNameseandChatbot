<style>
    @@media (min-width: 576px) {
        .modal-card {
            max-width: 1320px;
            margin: 1.75rem auto;
            max-height: 100%;
            position: relative;
            overflow: auto !important;
            padding-right: unset;
        }
    }

    .icon-spinner4.spinner {
